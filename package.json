{
    "name": "maturita",
    "version": "1.0.0",
    "description": "A fictional company website for my maturita work",
    "homepage": "https://davidstraka2.github.io/maturita",
    "bugs": "https://github.com/davidstraka2/maturita/issues",
    "license": "MIT",
    "author": "David Straka (https://github.com/davidstraka2)",
    "main": "index.html",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidstraka2/maturita"
    },
    "scripts": {
        "autoprefixer": "postcss -u autoprefixer -r src/css/*.css",
        "babel": "babel src/js-raw/ -d src/js-browser/",
        "build": "run-s flow:* minify:js && node node/build.js",
        "flow:css": "run-s sass autoprefixer",
        "flow:js": "node node/clear-js-browser.js && run-s babel",
        "lint:js": "eslint src/js-raw/",
        "minify:js": "uglifyjs  --compress --mangle --name-cache src/js-min/cache.json --source-map --toplevel --output src/js-min/bundle.js -- src/js-browser/*.js",
        "sass": "node-sass --output-style compressed -o src/css src/scss",
        "start": "start src/index.html",
        "watch": "run-p watch:*",
        "watch:js": "onchange \"src/js-raw/*.js\" -- npm run flow:js",
        "watch:scss": "onchange \"src/scss/*.scss\" -- npm run flow:css"
    },
    "dependencies": {
        "normalize.css": "^7.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.6",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "browserify": "^14.5.0",
        "eslint": "^4.11.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "fs-extra": "^4.0.2",
        "glob": "^7.1.2",
        "node-sass": "^4.6.1",
        "npm-run-all": "^4.1.2",
        "onchange": "^3.2.1",
        "postcss": "^6.0.14",
        "postcss-import": "^11.0.0",
        "uglify-es": "github:mishoo/UglifyJS2#harmony",
        "uglify-js": "^3.1.9"
    },
    "private": true,
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Edge versions",
        "last 2 Firefox versions",
        "last 2 Opera versions"
    ],
    "babel": {
        "presets": [
            "env"
        ]
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "node": false
        },
        "extends": "airbnb-base",
        "parserOptions": {
            "sourceType": "script"
        },
        "rules": {
            "arrow-parens": [
                "warn",
                "as-needed"
            ],
            "consistent-return": "off",
            "curly": [
                "warn",
                "multi-or-nest",
                "consistent"
            ],
            "func-names": "off",
            "indent": [
                "warn",
                4,
                {
                    "SwitchCase": 1
                }
            ],
            "linebreak-style": "off",
            "max-len": [
                "error",
                80
            ],
            "no-continue": "off",
            "no-labels": [
                "error",
                {
                    "allowLoop": true
                }
            ],
            "no-mixed-operators": [
                "warn",
                {
                    "groups": [
                        [
                            "%",
                            "**",
                            "*"
                        ],
                        [
                            "%",
                            "**",
                            "/"
                        ],
                        [
                            "&",
                            "|",
                            "^",
                            "~",
                            "<<",
                            ">>",
                            ">>>"
                        ],
                        [
                            "==",
                            "!=",
                            "===",
                            "!==",
                            ">",
                            ">=",
                            "<",
                            "<="
                        ],
                        [
                            "&&",
                            "||"
                        ],
                        [
                            "in",
                            "instanceof"
                        ]
                    ],
                    "allowSamePrecedence": false
                }
            ],
            "no-param-reassign": "off",
            "no-plusplus": "off",
            "no-restricted-syntax": [
                "error",
                {
                    "selector": "ForInStatement",
                    "message": "for..in loops iterate over the entire prototype chain, which is virtually never what you want. Use Object.{keys,values,entries}, and iterate over the resulting array."
                },
                {
                    "selector": "ForOfStatement",
                    "message": "iterators/generators require regenerator-runtime, which is too heavyweight for this guide to allow them. Separately, loops should be avoided in favor of array iterations."
                },
                {
                    "selector": "WithStatement",
                    "message": "`with` is disallowed in strict mode because it makes code impossible to predict and optimize."
                }
            ],
            "object-curly-spacing": [
                "warn",
                "never"
            ],
            "one-var": "off",
            "prefer-const": "off",
            "space-before-function-paren": [
                "warn",
                "never"
            ],
            "strict": [
                "error",
                "global"
            ],
            "template-curly-spacing": [
                "warn",
                "always"
            ],
            "import/no-extraneous-dependencies": [
                "error",
                {
                    "devDependencies": true
                }
            ]
        },
        "overrides": [
            {
                "files": [
                    "node/**/*.js"
                ],
                "env": {
                    "browser": false,
                    "node": true
                },
                "parserOptions": {
                    "sourceType": "module"
                },
                "rules": {
                    "no-console": "off"
                }
            }
        ]
    }
}
