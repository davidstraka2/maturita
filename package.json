{
    "name": "maturita",
    "version": "1.0.0",
    "description": "A fictional company website for my maturita work",
    "homepage": "https://davidstraka2.github.io/maturita",
    "bugs": "https://github.com/davidstraka2/maturita/issues",
    "license": "MIT",
    "author": "David Straka (https://github.com/davidstraka2)",
    "main": "index.html",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidstraka2/maturita"
    },
    "scripts": {
        "babel": "babel src/js-raw/ -d src/js-browser/",
        "build": "run-s flow:* minify:js && node node/build.js",
        "flow:css": "node node/flow-css.js && run-s sass",
        "flow:js": "node node/clear-js-browser.js && run-s babel",
        "lint:js": "eslint src/js-raw/",
        "minify:js": "uglifyjs  --compress --mangle --name-cache src/js-min/cache.json --source-map --toplevel --output src/js-min/bundle.js -- src/js-browser/*.js",
        "sass": "node-sass --output-style compressed -o src/styles/_out/ --source-map true src/styles/main/",
        "start": "start src/index.html",
        "watch": "run-p watch:*",
        "watch:js": "onchange \"src/js-raw/**/*.js\" -- npm run flow:js",
        "watch:styles": "onchange \"src/styles/lib/**/*.css\" \"src/styles/lib/**/*.scss\" \"src/styles/main/**/*.css\" \"src/styles/main/**/*.scss\" \"src/styles/parts/**/*.css\" \"src/styles/parts/**/*.scss\" -- npm run flow:css"
    },
    "dependencies": {
        "normalize.css": "^7.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.6",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "eslint": "^4.11.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "fs-extra": "^4.0.2",
        "glob": "^7.1.2",
        "node-sass": "^4.6.1",
        "npm-run-all": "^4.1.2",
        "onchange": "^3.2.1",
        "postcss": "^6.0.14",
        "postcss-import": "^11.0.0",
        "rollup": "^0.53.0",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "uglify-es": "github:mishoo/UglifyJS2#harmony",
        "uglify-js": "^3.1.9"
    },
    "private": true,
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Edge versions",
        "last 2 Firefox versions",
        "last 2 Opera versions"
    ],
    "babel": {
        "presets": [
            "env"
        ]
    }
}
