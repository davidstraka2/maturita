{
    "name": "maturita",
    "version": "1.0.0",
    "description": "A fictional company website for my maturita work",
    "homepage": "https://davidstraka2.github.io/maturita",
    "bugs": "https://github.com/davidstraka2/maturita/issues",
    "license": "MIT",
    "author": "David Straka (https://github.com/davidstraka2)",
    "main": "index.html",
    "repository": {
        "type": "git",
        "url": "https://github.com/davidstraka2/maturita"
    },
    "scripts": {
        "build": "run-p flow:* && node node/build.js",
        "flow:css": "run-p flow-css:import-libs flow-css:prefix && npm run flow-css:compile",
        "flow:js": "run-p flow-js:babel-main flow-js:babel-modules && run-s flow-js:bundle minify:js",
        "flow-css:compile": "node node/flow-css-out.js && npm run sass",
        "flow-css:import-libs": "node node/flow-css-import-libs.js",
        "flow-css:import-libs-compile": "node node/flow-css-import-libs.js && npm run flow-css:compile",
        "flow-css:prefix": "node node/flow-css-prefix.js",
        "flow-css:prefix-compile": "node node/flow-css-prefix.js && npm run flow-css:compile",
        "flow-js:babel-main": "node node/flow-js-babel-main.js && babel src/scripts/main/ -d src/scripts/_main-babel/ --source-maps",
        "flow-js:babel-modules": "node node/flow-js-babel-modules.js && babel src/scripts/modules/ -d src/scripts/_modules-babel/ --source-maps",
        "flow-js:bundle": "node node/flow-js-bundle.js",
        "flow-js:libs": "run-s flow-js:bundle minify:js",
        "flow-js:main": "run-s flow-js:babel-main flow-js:bundle minify:js",
        "flow-js:modules": "run-s flow-js:babel-modules flow-js:bundle minify:js",
        "lint:js": "eslint src/scripts/libs && eslint src/scripts/main && eslint src/scripts/modules",
        "minify:js": "node node/minify-js.js",
        "postinstall": "npm run build",
        "sass": "node-sass --output-style compressed -o src/styles/_out/ --source-map true src/styles/main/",
        "start": "start src/index.html",
        "watch": "run-p watch:*",
        "watch:scripts-libs": "onchange \"src/scripts/lib/**/*.js\" -- npm run flow-js:libs",
        "watch:scripts-main": "onchange \"src/scripts/main/**/*.js\" -- npm run flow-js:main",
        "watch:scripts-modules": "onchange \"src/scripts/modules/**/*.js\" -- npm run flow-js:modules",
        "watch:styles-lib": "onchange \"src/styles/lib/**/*.css\" \"src/styles/lib/**/*.scss\" -- npm run flow-css:import-libs-compile",
        "watch:styles-parts": "onchange \"src/styles/parts/**/*.css\" \"src/styles/parts/**/*.scss\" -- npm run flow-css:prefix-compile",
        "watch:styles-main": "onchange  \"src/styles/main/**/*.css\" \"src/styles/main/**/*.scss\"  -- npm run flow-css:compile"
    },
    "dependencies": {
        "normalize.css": "^7.0.0"
    },
    "devDependencies": {
        "autoprefixer": "^7.1.6",
        "babel-cli": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "eslint": "^4.11.0",
        "eslint-config-airbnb-base": "^12.1.0",
        "eslint-plugin-import": "^2.8.0",
        "fs-extra": "^4.0.2",
        "glob": "^7.1.2",
        "globby": "^7.1.1",
        "html-minifier": "^3.5.8",
        "node-sass": "^4.6.1",
        "npm-run-all": "^4.1.2",
        "onchange": "^3.2.1",
        "postcss": "^6.0.14",
        "postcss-import": "^11.0.0",
        "rollup": "^0.53.0",
        "rollup-plugin-commonjs": "^8.2.6",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-sourcemaps": "^0.4.2",
        "uglify-es": "github:mishoo/UglifyJS2#harmony",
        "uglify-js": "^3.1.9"
    },
    "private": true,
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 ChromeAndroid versions",
        "last 2 Edge versions",
        "last 2 Firefox versions",
        "last 2 Opera versions"
    ],
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false
                }
            ]
        ]
    }
}
